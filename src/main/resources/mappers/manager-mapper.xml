	select seq_letter.nextval from dual
</select>-->


<!-- 회원 신고 조회 -->
<select id="selectAllreport" resultType="com.bjbj.manager.ReportDTO" >
	select * from report
</select>

<!-- 회원 신고 - 신고삭제 -->
<delete id="deleteReport" parameterType="String">
	delete from report where email = #{email}
</delete>

<!-- 모임 신고 조회 -->
<select id="selectRoomreport" resultType="com.bjbj.manager.ReportBookroomDTO">
	select * from report_bookroom
</select>
<!-- 모임신고 - 신고삭제 -->
<delete id="deleteReportBR" parameterType="int">
	delete from report_bookroom where room_id = #{room_id}
</delete>

<!-- 모임신고 - 경고 횟수 추가 -->
<update id="addReportBR" parameterType="int" >
	update report_bookroom set warning_count = warning_count +1 where room_id = #{room_id}
</update>
<!--모임신고 - 조치 변경 -->
<update id="modifyActionBR" parameterType="int">
	update report_bookroom set report_action = report_action +1 where room_id = #{room_id}
</update>
	
</mapper>